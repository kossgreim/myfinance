= form_for [@category, @subcategory], html: { class: "form form-horizontal category" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@subcategory[:name])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), category_path(@category), :class => 'btn btn-default'
