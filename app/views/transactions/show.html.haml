- model_class = Transaction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @transaction.amount
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @transaction.comment
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @transaction.category_id
%p
  %strong= model_class.human_attribute_name(:subcategory_id) + ':'
  %br
  = @transaction.subcategory_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @transaction.user_id
%p
  %strong= model_class.human_attribute_name(:account_id) + ':'
  %br
  = @transaction.account_id


= link_to t('.back', :default => t("helpers.links.back")), transactions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_transaction_path(@transaction), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), transaction_path(@transaction), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
